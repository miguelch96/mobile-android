<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="16dp"
    android:layout_margin="4dp"
    android:id="@+id/cancha_card">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        
        <com.androidnetworking.widget.ANImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pictureImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bartolome Herrera"
            android:id="@+id/nombreTextView"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/pictureImageView"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pueblo libre"
            android:textSize="10dp"
            android:id="@+id/distritoTextView"
            app:layout_constraintTop_toBottomOf="@id/nombreTextView"
            app:layout_constraintLeft_toRightOf="parent"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/starIcon"
            android:src="@drawable/ic_star_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/nombreTextView"
            app:layout_constraintRight_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:id="@+id/scoreTextView"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/nombreTextView"
            app:layout_constraintRight_toLeftOf="@id/starIcon"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>