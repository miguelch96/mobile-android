<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.miguelch96.pichangapp.fragments.CanchasFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendados para ti:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/canchasRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerca tuyo:"
            app:layout_constraintTop_toBottomOf="@id/canchasRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/canchas1RecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title1TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservadas anteriormente:"
            app:layout_constraintTop_toBottomOf="@id/canchas1RecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/canchas2RecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title2TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>
   



</ScrollView>
