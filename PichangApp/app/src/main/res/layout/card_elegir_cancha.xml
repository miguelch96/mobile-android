<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/canchaCardView"
    android:layout_marginVertical="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cancha: Bartolome Herrera"
    android:textStyle="bold"
    android:textSize="14dp"
    android:id="@+id/nombreTextView"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distrito: San Miguel"
            app:layout_constraintTop_toBottomOf="@id/nombreTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            android:id="@+id/distritoTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materialTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12dp"
            android:text="Material: Sintético"
            app:layout_constraintTop_toBottomOf="@id/nombreTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capacidadTextView"
            android:text="Capacidad: Futbol 6"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/distritoTextView"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio día/noche: 80/120"
            android:id="@+id/precioTextView"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/materialTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="3dp"/>


    </android.support.constraint.ConstraintLayout>
</RelativeLayout>