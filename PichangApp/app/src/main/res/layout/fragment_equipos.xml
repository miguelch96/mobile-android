<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.constraint.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.miguelch96.pichangapp.fragments.EquiposFragment"
    >


        <TextView
            android:id="@+id/tituloListaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendados para ti:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/equiposRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tituloListaTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

       <TextView
            android:id="@+id/titulo1ListaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los mejores en tu distrito:"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/equiposRecyclerView"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/equipos1RecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titulo1ListaTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/titulo2ListaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los mejores en Lima:"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/equipos1RecyclerView"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/equipos2RecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titulo2ListaTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


</android.support.constraint.ConstraintLayout>
</ScrollView>
